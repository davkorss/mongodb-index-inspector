{
  "name": "mongodb-index-inspector",
  "version": "1.0.0",
  "description": "Log warnings about the missing MongoDB indexes.",
  "main": "dist/index.js",
  "types" : "dist/index.d.ts",
  "scripts": {
    "build": "tsc --noEmit -p .",
    "test": "npm run build && npm run lint && jest --no-cache --coverage",
    "test:watch": "npm run build && npm run lint && jest --no-cache --coverage --watch",
    "lint": "tslint \"*.ts?(x)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davkorss/mongodb-index-inspector.git"
  },
  "keywords": [
    "typescript",
    "mongodb",
    "index",
    "inspector"
  ],
  "author": "Andrey Ru√≠z <davkorss@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davkorss/mongodb-index-inspector/issues"
  },
  "homepage": "https://github.com/davkorss/mongodb-index-inspector#readme",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.10",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
